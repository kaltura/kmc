<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 horizontalScrollPolicy="off">

	<mx:Script>
		<![CDATA[
			import com.kaltura.edw.view.window.flavors.FilesTable;


			protected function textinput1_changeHandler(event:Event):void {
				dispatchEvent(new Event(FilesTable.NAME_CHANGED, true));
			}

			 
			
			public function get text():String {
				return txt.text;
			}

		]]>
	</mx:Script>

	<mx:TextInput id="txt" text="{data.fileName}" styleName="simpleIrLabel" change="textinput1_changeHandler(event)"
				  width="100%"/>
</mx:HBox>
