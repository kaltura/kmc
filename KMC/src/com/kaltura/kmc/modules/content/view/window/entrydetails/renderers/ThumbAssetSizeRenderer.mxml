<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="90" verticalAlign="middle" horizontalAlign="center">
	
	<mx:Script>
		<![CDATA[
			import com.kaltura.kmc.modules.content.model.ThumbnailWithDimensions;
	
			[Bindable]
			private var _size:String;
			
			override public function set data(value:Object):void {
				var thumbDimensions:ThumbnailWithDimensions = value as ThumbnailWithDimensions;
				if (thumbDimensions.thumbAsset)
					_size = thumbDimensions.thumbAsset.size.toString();
				else
					_size = "-";
			}
		]]>
	</mx:Script>
	
	<mx:TextArea backgroundAlpha="0" borderStyle="none" text="{_size}" width="100%" textAlign="center"/>
</mx:HBox>