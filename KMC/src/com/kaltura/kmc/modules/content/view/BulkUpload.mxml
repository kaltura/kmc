										<mx:Label id="entriesLabel" text="{outerDocument.getEntriesNumber(data)}" toolTip="{entriesLabel.text}" />
									</mx:HBox>
								</mx:Component>
							</mx:itemRenderer>
						</mx:DataGridColumn>
						
						<!-- status -->
