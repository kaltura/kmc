<?xml version="1.0" encoding="utf-8"?>
<renderers:AccessControlRendererBase 
									 xmlns:mx="http://www.adobe.com/2006/mxml" horizontalScrollPolicy="off"
									 paddingLeft="4" verticalScrollPolicy="off" width="100%" height="100%"
									 verticalAlign="middle"
									 xmlns:renderers="com.kaltura.kmc.modules.account.view.windows.accesscontrolwindow.renderers.*">
	<mx:Script>
		<![CDATA[
			import com.kaltura.windows.popUpWindows.AccessControlProfilePopUpWindow;
			import com.kaltura.vo.AccessControlProfileVO;
			import mx.core.IFlexDisplayObject;
			import mx.core.Application;
			import mx.managers.PopUpManager;


			private function onClickProfileName(event:Event):void {
				var editProfileWin:AccessControlProfilePopUpWindow = new AccessControlProfilePopUpWindow();
				editProfileWin.accessControlProfile = data as AccessControlProfileVO;
				PopUpManager.addPopUp(editProfileWin, Application.application as DisplayObject, true);
				PopUpManager.centerPopUp(editProfileWin);
			}
		]]>
	</mx:Script>

	<mx:LinkButton label="{data.profile.name}" toolTip="{data.profile.name}" click="onClickProfileName(event)"
				   styleName="itemNameLinkButtonInTableStyle" textAlign="left" paddingLeft="0" buttonMode="true"
				   useHandCursor="true"/>
</renderers:AccessControlRendererBase>

