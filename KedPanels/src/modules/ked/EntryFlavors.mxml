				}
				var filesList:ArrayCollection = new ArrayCollection(new Array(uploadFile));
				openAddFlavorsWindow(AddFlavorAssetsWindow.ACTION_IMPORT, filesList, false);
				//resets data
				_selectedFlavorWithParams = null;
			}
			
			
